<div class="flex flex-col w-full" >
  <% if(invoiceType != 2) { %>
  <div class="total flex justify-between mt-[23.63px] text-[12.51px] text-[#4D4B4C] px-14">
    <div class="leading-4 left mt-[5.56px]">
      <p class="font-semibold">Arrêtée la présente Facture à la somme de :</p>
      <p>
        <%=totalLetter %> <%=currency %><br>
  
        <% if(invoiceType == 1) { %>
          
          <% if(project.modalite != 0){ %> 
       
        Modalité de paiment : <%=project.modalite%>% à la commande <br>
         <%=   project.invoiceType == 0 ? "Accompte à payer ": "Acompte déjà payé" %>  : <%= totalAccount %> <%=currency %> <br>
         <%=   project.invoiceType == 0 ? " Réliquat à la livraison": "Reliquat à payer" %>  : <%= totalReliquat %> <%=currency %> <br>
  
        <% } %>
        <% } %>
      </p>
    </div>
    <% } %>
    <% if(invoiceType != 2) { %>
          
       
      <div class="right flex flex-col text-[9.73px] gap-[11.12px] inter">
        <p class="flex justify-between">
          <span>MONTANT TOTAL HT:</span>
          <span> <%=totalHT%>  <%=currency %></span>
        </p>
        <% if(project.tva != 0 || project.tva != ''){ %>
        <p class="flex justify-between">
          <span>TVA <%=project.tva%>%:</span>
          <span><%=totalTva%>  <%=currency %></span>
        </p>
  
        <% } %>
  
        <% if(project.discount != 0 || project.discount != ''){ %>
        <p class="flex justify-between text-[7.64px] px-[11.81px] py-[6.25px] text-[#222428] border border-[#4D4B4C]">
          <span>REMISECOMMERCIALE(<%= project.discount %>%):</span>
          <span>- <%=totalDiscount%>  <%=currency %></span>
        </p>
        <% }%>
        <p class="total-amount px-[11.12px] py-[9.73px]">
          <span> MONTANT TOTAL TTC : </span>
          <span><%= total %>  <%=currency %></span>
        </p>
      </div>
  
      
      
    </div>
    <% } %>

  <% if(project.remarque.length > 0){ %>
                     
    <div class="total flex justify-between mt-[5px] text-[12.51px] text-[#4D4B4C] px-14">

      <p class="py-10 text-[14px]"> <span class="pr-1 underline">Remarque :</span> <%= project.remarque %></p>
    </div>             

    <% }%>
</div>