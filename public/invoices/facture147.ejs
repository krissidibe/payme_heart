    <!-- Templates styling -->
  <style>
    .header {
    padding: 0px 55px;
  }
  .date {
    margin-top: 8px;
    padding-top: 8px;
    border-top: 1px solid #000100;
  }
    .headline-wrapper {
    width: auto;
    margin: 0 55px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .facture-content .headline-wrapper .facture-number {
    display: none;
  }
    .sub-headline-wrapper {
    width: auto;
    margin: 0 55px;
  }
  .sub-headline {
    flex: 1;
  }
  .sub-headline > div {
    flex: 1;
  }

  .sub-headline > div {
    gap: 16px;
    justify-content: space-between;
  }

  .hidden-subheadline {
    display: none;
  }

  .hidden-subheadline div {
    display: none;
  }

  .sub-headline p {
    max-width: 150px;
  }
  .facture-content .sub-headline-wrapper .facture-number {
    display: none;
  }
    .tabs-header {
    gap: 5px;
    width: auto;
    margin-left: 56px;
    margin-right: 56px;
    margin-bottom: 8px;
    border-bottom: 1px solid black;
  }

  .tabs-header p {
    padding-top: 10px; /* /!\ */
    padding-bottom: 10px; /* /!\ */
  }
  
  .facture-content .tabs-header .description {
    padding-left: 10px;
  }
  .facture-content .tabs-header .amount {
    padding-right: 20px;
  }

  .tabs-item {
    padding: 0 56px;
  }
  .tabs-item .amount {
    padding-right:  16px !important;
  }
  
  .tabs-item p {
    padding-top: 14px; /* /!\ */
    padding-bottom: 14px; /* /!\ */
    padding-left: 5px;
  }

  .tabs-item.empty-item {
    display: none;
  }
  
  /* Show default qty */
  .tabs .quantity {
    display: none;
  }
  
  .tabs .quantity.second {
    display: block;
  }
  
  /* Hide indexs */
  .tab-indexs {
    display: block;
  }

  .tabs .amount {
    padding-left: 0 !important;
  }
    .total {
    color: #4D4B4C;
    margin-top: 23.63px;
    padding-left: 56px;
    padding-right: 56px;
    align-items: flex-start;
    gap: 10px;
  }

  .left {
    max-width: 400px;
    min-width: 400px;
  }

  .right, .right > div {
    min-width: 260px;
    gap: 10px;
  }

  .right p {
    padding-left: 6px;
    padding-right: 14px;
  }
  
  .right p span {
    z-index: 2;
  }

  .right .remise {
    padding: 6px 12px 8px 6px;
    border: 1px solid #4D4B4C;
  }

  .right .total-amount {
    background: pink;
    padding: 10px 12px 10px 9px;
  }

  .total-separator {
    height: 1px;
    background: black;
    left: 0;
    right: 0;
  }
    .sign {
    margin-top: 8px;
    padding-top: 40px;
    padding-left: 0px !important;
    padding-right: 0px !important;
  }

  .sign > div p {
    width: 130px;
    padding-top: 0;
    padding-bottom: 8px; 
  }

  .sign > div:last-child {
     /* margin-top: -8px*/
     margin-top: 0;
  }
  /* <!-- addons styling --> */
    .header .heading-info {
    padding: 0;
    flex: 1;
  }
    .headline-wrapper {
    padding: 22px 16px;
    align-items: unset;
  }

  .headline {
    padding: 0;
    flex: 1;
    border-right: 1px solid #4D4B4C;
  }

  .header .facture-number {
    display: none;
  }

  .headline-wrapper .facture-number {
    display: block !important;
    justify-self: flex-start;
    align-self: flex-start;
    border: none;
    padding-top: 0;
  }
      .facture-number {
    display: flex;
    flex-direction: column;
  }

  .facture-number > div {
    display: flex;
    font-size: 14px;
  }
  
  .facture-number > div p:last-child {
    padding-left: 6px;
    padding-top: 0;
  }

  .date {
    font-size: 14px;
    margin-top: 0;
    padding-top: 0;
    border: none;
    line-height: 12px;
    text-transform: uppercase;
  }

  .facture-content .facture-number p,
  .facture-content .facture-number > div p:last-child {
    padding-top: 0;
    font-size: 14px;
  }
    .tabs-item p {
    border-bottom: 1px solid #A6A5A3 /*rgba(29, 29, 29, 0.2)*/;
  }
      .tabs .quantity.second, 
  .tabs .quantity.third {
    display: none;
  }

  .tabs .quantity.first {
    display: block;
    width: 80px;
  }
      .sign {
    margin-top: 8px;
    padding-top: 40px;
    padding-left: 56px;
    padding-right: 56px;
    gap: 10px;
  }
  .sign > div {
    flex: 1;
    max-width: unset;
    min-height: 200px;
    margin-top: 0;
    padding: 8px 23px 20px 23px;
    border: 1px solid #000;
    position: relative;
    /* background: #F8F7F7; */
  }

  .sign > div:first-child {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }
