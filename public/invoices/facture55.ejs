<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    .page-footer,
    .page-footer-space {
      height: 80px;
    }

    .page-footer {
      position: fixed;
      bottom: 80px;

      width: 100%;
      /* for demo */
      /* for demo */
    }

    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    @font-face {
      font-family: 'Helvetica Neue';
      src: url('path-to-your-fonts/HelveticaNeue-Bold.woff2') format('woff2'),
          url('path-to-your-fonts/HelveticaNeue-Bold.woff') format('woff');
      font-weight: bold;
      font-style: normal;
    }
 

    .heading {
      margin-top: 55.6px;
      flex-direction: column;
      align-items: center;
      
    }

    .heading img {
     
      color: #383838;
      object-position: center;
      
    }

    .pages .facture-number {
      width: 280px;
      margin: 24px auto;
      justify-self: flex-start;
      padding-right: 0 !important;
      border-color: var(--primary-text-color,white);
   
      
    }
    .pages .facture-number > div p    {
      
     
      color: var(--primary-text-color,white) !important;
    }

    .pages .facture-number > div {
      width: 280px;
      padding: 2px 12.5px;
      background:  var(--primary-color,#007D56);
      
     
    }

    .facture-number > div p:first-child {
      color: #010101;
    }
    .facture-number .dividor {
      display: block !important;
     flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }


    .heading .logo {
      font-family: 'Helvetica Neue', sans-serif;
      background:  var(--primary-color,#007D56);
      color: var(--primary-text-color,white);
    }

    .headline {
      margin-top: 10.5px !important;
      padding-top: 0px;
    }

    .headline p { 
      font-weight: 400;
    }

    .tabs {
      margin-top: 10px;
    }

    .tabs-item {
      color: #4D4B4C;
    }

    .tabs .tabs-header p {
      color: var(--primary-text-color,white);
       
    }

    .total .right {
    
      position: relative;
      bottom: -2px;
      gap: 0px !important;
    }
    .total .right >p:last-child {
      border-bottom:none;
    }

    .tabs .tabs-header {
      font-weight: bold;
      background:  var(--primary-color,#007D56);
      color: var(--primary-text-color,white);
      width: auto !important;
      gap: 0;
      color: #3C3C3B;
     margin: 0px 52px !important;
     padding: 2px 5px !important;
     margin-bottom: 20px !important;
     border-radius: 100px !important;
    }
   

    

    .total {
      margin-top: 20px !important;
      margin-bottom: 14.9px;
    }

    .total .left {
      padding-top: 12px;
    }

    .total .right {
      position: relative;
      bottom: -2px;
    }

    .total .right p {
      border-bottom: 1px solid #010101;
    }

    .total .right .total-amount {
      color: #383838;
     
    }

    .sign {
      font-weight: 700;
    }
    
    .footer {
      bottom: 0;
      
      z-index: 1;
     
      padding-top: 0 !important;
      background:  var(--primary-color,#007D56);
      color: var(--primary-text-color,white);
    }

    .footer div {
       
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <%- include('../subtemplates/footer1') %>
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <%- include('../subtemplates/header4') %>
          
              <!-- headline (object, address, client) -->
              <%- include('../subtemplates/headline1') %>

              <!-- table -->
              <%- include('../subtemplates/table1') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total2') %>

              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
