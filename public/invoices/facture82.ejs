<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    
    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
      margin-bottom: 30px;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    @font-face {
      font-family: 'Helvetica Neue';
      src: url('path-to-your-fonts/HelveticaNeue-Bold.woff2') format('woff2'),
          url('path-to-your-fonts/HelveticaNeue-Bold.woff') format('woff');
      font-weight: bold;
      font-style: normal;
    }

    .heading {
      margin-top: 35.6px !important;
      flex-direction: column;
    
  
     
    }
    .heading img {
     
      color: #383838;
      object-position: left;
      
      padding-right: 10px !important;
      max-width: 300px !important;
      
    }

    .heading > div   {
   
      
      align-items: center !important;
    position: relative;
    padding-bottom: 10px !important; 
    }
  
    .heading > div > p  {
   
      color: #383838;
      flex: 1;
      height: 100% !important;
      
    }
    .pages .facture-number {
      width: auto !important;
       
      justify-self: flex-start;
      padding-right: 0 !important;
     
   
      
    }
    .pages .facture-number     {
      
      background:  var(--primary-color,#DBAC5B);
     
       padding: 20px !important;
       padding-top: 5px !important;
       padding-bottom: 2px !important;
       height: 60px;
       border-bottom-left-radius: 10px;
       border-bottom-right-radius: 10px;
       border-top-right-radius: 7px;
      
    }
    .pages .facture-number   *    {
      
      color: var(--primary-text-color,black) !important;
      
    }

    .pages .facture-number > div {
      
     
      
     
    }

    .facture-number > div p:first-child {
      color: #010101;
    }
    .facture-number .dividor {
      display: block !important;
     flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }


    .heading .logo {
      font-family: 'Helvetica Neue', sans-serif;
      background:  var(--primary-color,#DBAC5B);
      color: var(--primary-text-color,white);
    }

    .headline {
      
     
      padding-top: 0px;
      justify-content: space-between;
     
      margin-bottom: 55.6px;
      display: flex;
    }

    .headline > div {
      
     
      padding-top: 10px;
      
    }


    .headline p { 
      font-weight: 400;
    }

    .tabs {
      margin-top: 0px !important;
      margin-bottom: 40px !important;
     
    }

    .tabs-item {
      color: #4D4B4C;

    }

    .tabs .tabs-header {
     margin-top: 0px !important;
   
     padding-bottom: 5px !important;
    
  
       
    }
    .tabs .tabs-header p {
      background:  var(--primary-color,#DBAC5B);
      color: var(--primary-text-color,black);
      padding-top: 8px !important;
   height: 35px !important;
   font-weight: 100;
      
       
    }

    .tabs .tabs-header p:first-child { 
 
   border-top-left-radius: 40px;
   border-bottom-left-radius: 40px;  
       
    }

    .tabs .tabs-header p:last-child { 
      border-top-right-radius: 40px;
 
      border-bottom-right-radius: 40px;  
          
       }


    .tabs-item  p {
  
        
       padding-top: 0px !important;
  
      }
  
      .headline-line{
        background:  var(--primary-color,#DBAC5B);
opacity: 0.4;
      }
     

    .tabs-item :last-child {
  
    justify-content: flex-end !important;
    align-items: start;

    }

    .total   {
      padding: 30px 50px !important;
      margin: 0px 56px !important;
     
      background:  var(--primary-color,#DBAC5B);
      color: var(--primary-text-color,black);
    }

    .total  p  {
     
      color: var(--primary-text-color,black);
    }
    .total-separator{
      display: block !important;
      opacity: 0.2;
    }

    .total .total-amount {
      background:  #4D4C4C;
      color:white;
      height: 32px !important;
      
      display: flex; 
      justify-items: center;
      align-items: center;
    }

    .signature {
      margin-top: 0px !important;
      margin: 0px 56px !important;
      padding: 0px 30px !important;
      padding-top: 20px !important;
      padding-bottom: 60px !important;
      background:  var(--primary-color,#DBAC5B);
      color: var(--primary-text-color,black);
      padding-left: 60px !important;
     
    }
    
    .sign {
      font-weight: 700;
    }
    .signature * {
     border-color:  var(--primary-text-color,black) !important;
    }
    .remise  {
     border-color:  var(--primary-text-color,black) !important;
    }
    .total-separator  {
     background:  var(--primary-text-color,black) !important;
    }
    
    .footer {
      bottom: 0;
      
      z-index: 1;
     
      padding-top: 0 !important;
      background:  var(--primary-color,#383838);
      color: var(--primary-text-color,white);
    }

    .footer div {
       
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .headline > div{
      font-size: 15px !important;
    }


    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <%- include('../subtemplates/header5') %>
          
              <div class="h-[1px] mx-[56px] headline-line mt-10" ></div>
              <!-- headline (object, address, client) -->
              <div class="headline inter leading-5 font-light    text-[16.4px] px-14">
 
                <div class="max-w-[450px]" >
              
                  <p>Objet: <%= project.name %></p>
                  <p>Client: <%=  customer.name %></p>
                  <p>Adresse: <%=  customer.address %>  </p>
                </div>
              
                <div class="facture-number h-[80px]   flex flex-col     leading-tight text-[15px] inter">
                  <div class="flex leading-6">
                    <% if(invoiceType == 0) { %>
                      <p>PROFORMA</p>
                    <% } %>
                    <% if(invoiceType == 1) { %>
                      <p>FACTURE</p>
                    <% } %>
                    <% if(invoiceType == 2) { %>
                      <p >BORDEREAU</p>
                    <% } %> 
                   
                    <p class="self-end"> <span class="ml-1" >NÂ°</span> :  <span><%=project.invoiceNumber.toString().padStart(5, '0')%></span></p>
                  </div>
                  <div class="flex items-end self-end ">
                    <p>DATE:  <span><%=date%></span></p>
                    
                    
                  </div>
                </div>
              </div>
              
              
              
              
               
             

              <!-- table -->
              <%- include('../subtemplates/table3') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>

              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
