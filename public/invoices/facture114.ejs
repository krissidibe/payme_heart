<body>
  <!-- footer -->
  <div class="footer page-footer flex flex-col inter">
    <div class="absolute left-[-10px] bottom-0">
      <svg xmlns="http://www.w3.org/2000/svg" width="50" height="1015" viewBox="0 0 50 1015" fill="none">
        <path d="M49.9765 -0.00439453H-1.08496V1016.69H49.9765V-0.00439453Z" fill="var(--primary-color, #F9BE70)
"/>
      </svg>
    </div>
    <div class="absolute top-[-28px] right-[222px]">
      <svg xmlns="http://www.w3.org/2000/svg" width="356" height="2" viewBox="0 0 356 2" fill="none">
        <path d="M355.658 0.899414H0.161133V1.59489H355.658V0.899414Z" fill="#4E4D4D"/>
      </svg>
    </div>
    <div class="text-center text-[11px] px-[98px] line-clamp-3 pt-1">
      <div class="w-full text-[11px] line-clamp-3 flex flex-col px-14 ">
        <p>      <%= enterprise.name %> - notre adresse <%= enterprise.address %> - Rccm :  <%= enterprise.rccm %> - Email :  <%= enterprise.email %> - Compte Bank :  <%= enterprise.bankNumber %> - Tél : +<%= JSON.parse(enterprise.numbers)[0].indicatif %><%= JSON.parse(enterprise.numbers)[0].number %> / +<%= JSON.parse(enterprise.numbers)[1]?.indicatif %><%= JSON.parse(enterprise.numbers)[1]?.number %> - <%= JSON.parse(enterprise.nif)[0].content %> <%= JSON.parse(enterprise.nif)[1]?.content %></p>
      </div>
    </div>
    
  </div>
  <table>
    <tbody>
      <tr>
        <td class="pages w-[827px]">
          
          <div class="<%= 'facture-content flex flex-col w-full page-content ' + (invoiceType == 0 ? 'proforma' : invoiceType == 1 ? 'facture' : invoiceType == 2 ? 'bordereau' : 'facture-content') %>">
            
            <!-- logo + facture -->
            <%- include('../subtemplates2b/header/header1') %>
            
            <!-- headline (object, address, client) -->
<%- include('../subtemplates2b/headline/headline1') %>
            
            <!-- table -->
            <main class="tabs flex flex-col font-light">
              <!-- table heading -->
              <div class="tabs-header inter flex ">
                <% if(invoiceType !== 2) { %>
                <p class="flex-1">Description</p>
                <p class="w-[60px] text-center">QTé.</p>
                <p class="w-[115px] text-center"><%=   invoiceType === 2 ? "Observation": " Prix.U" %></p>
                <p class="w-[114.5px] text-center"><%=   invoiceType === 2 ? "": "Montant" %></p>
                <% } %>
                <% if(invoiceType === 2) { %>
                  <p class="flex-1 pr-[20px]">Description</p>
                  <p class="w-[60px] text-center ">QTé.</p>
                  <p class="flex-1 text-center"><%=   invoiceType === 2 ? "Observation": " Prix.U" %></p>
                <% } %> 
              </div>
              <% table.forEach(function(item,index) { %>
                <!-- table item -->
                <% if(invoiceType !== 2) { %>
                <div class="tabs-item text-[12px] flex w-full">
                  <p class="flex-1"><%=item.designation%></p>
                  <p class="w-[65px] text-center"><%=item.quantity%></p>
                  <% if(item.rate != 0 && item.rate != null) { %>
                    <p class="w-[120px] text-center">
                      <%= invoiceType === 2 ? "": item.rate %>
                      <span class="ml-1"> <%=   invoiceType === 2 ? "": currency %></span> 
                    </p>
                    <% } %> 
                    <% if(item.amount != 0 && item.amount != null) { %>
                      <p class="w-[120px] text-center">
                      <%=   invoiceType === 2 ? "": item.amount %>
                        <span class="ml-1"> <%=   invoiceType === 2 ? "": currency %></span>
                      </p>
                      <% } %> 
                    </div>
                <% } %> 
                    <% if(invoiceType === 2) { %>
                      <div class="tabs-item text-[12px] flex w-full">
                        <p class="flex-1"><%=item.designation%></p>
                        <p class="w-[60px] text-center"><%=item.quantity%></p>
                        <p class="flex-1 text-center">
                          <% if(item.amount != 0 && item.amount != null) { %>
                            <%=   invoiceType === 2 ? "": item.amount %>
                              <span class="ml-1"> <%=   invoiceType === 2 ? "": currency %></span>
                            <% } %> 
                          </p>
                        </div>
                    <% } %>
              <% }) %>
            </main>
            
                        <!-- facture totals informations -->
            <%- include('../subtemplates2b/total/total1') %>

            <!-- signature -->
            <%- include('../subtemplates2b/sign/sign1') %>
            </div>
            
            <!-- footer -->
          </div>
        </td>
      </tr>
    </tbody>
    
    <tfoot>
      <tr>
        <td>
          <!--place holder for the fixed-position footer-->
          <div class="page-footer-space"></div>
        </td>
      </tr>
    </tfoot>
  </table>
</body>
</html>
