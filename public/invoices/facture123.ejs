    margin-right: 65px;
  }
    .sign {
    min-height: 200px;
    margin-top: 0;
    margin-left: 56px;
    margin-right: 56px;
    padding: 18px 23px 20px 23px;
    border: 1px solid #000;
    border-top: none;
    border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
    position: relative;
  }

  .sign p:first-child {
    margin-left: 35px;
  }
