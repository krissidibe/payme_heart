<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }


     .page-header,
    .page-header-space {
      height: 30px;
    }

    .page-footer,
    .page-footer-space {
      height: 50px;
    }

    .page-footer {
      position: fixed;
      bottom: 50px;

      width: 100%;
      /* for demo */
      /* for demo */
    }    
    
    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
      margin-bottom: 30px;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    @font-face {
      font-family: 'Helvetica Neue';
      src: url('path-to-your-fonts/HelveticaNeue-Bold.woff2') format('woff2'),
          url('path-to-your-fonts/HelveticaNeue-Bold.woff') format('woff');
      font-weight: bold;
      font-style: normal;
    }

    .heading {
      margin-top: 35.6px !important;
      flex-direction: column;
     
      padding-right: 0px !important;
     
    }
    .heading img {
     
      color: #383838;
      object-position: left;
      
      padding-right: 10px !important;
      max-width: 300px !important;
      
    }

    .heading > div   {
   
      
      align-items: center !important;
    position: relative;
    padding-bottom: 10px !important; 
    }
  
    .heading > div > p  {
   
      
      color: #383838;
       flex: 1;
        padding-left: 25px !important;
      height: 100% !important;
      padding-right: 15px !important;
    margin-left: 50px !important;
   
      
    }

    .heading p     {
      
      border-top: 1px solid var(--secondary-color,#009CDD) !important;
     
      
     padding-top: 6px;
    margin-right: 40px !important;
      
    }
  


    
    .pages .facture-number {
      width: auto !important;
       
      justify-self: flex-start;
      padding-right: 0 !important;
     
   
      
    }
    .pages .facture-number     {
      
      border-top: 1px solid var(--primary-color,#75173F) !important;
     
       padding: 20px 0px !important;
       padding-top: 5px !important;
       padding-bottom: 2px !important;
       padding-right: 20px !important;
       height: 60px;
    
      
    }
    .pages .facture-number::after     {
 
      content: "";
      background: var(--secondary-color,#009CDD) !important;
 width: 120px;
       height: 1px;
       max-height: 10px;
       position: absolute;
    margin-top: -6px;
 
    }
    .pages .facture-number   *    {
      
      
      
    }

    .pages .facture-number > div {
      
     
      
     
    }

    .facture-number > div p:first-child {
      color: #010101;
    }
    .facture-number .dividor {
      display: block !important;
     flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }


    .heading .logo {
      font-family: 'Helvetica Neue', sans-serif;
      background:  var(--primary-color,#DBAC5B);
      color: var(--primary-text-color,white);
    }

    .headline {
      
     
      padding-top: 0px;
      justify-content: space-between;
     margin-top: 0px !important;
      margin-bottom: 35.6px;
      display: flex;
    }

    .headline > div {
      
     
      padding-top: 10px;
      max-width: 450px !important;
      
    }


    .headline p { 
      font-weight: 400;
    }

    .tabs {
  
      margin-top: 0px !important;
      margin-bottom: 0px !important;
     
    }

    .tabs-item {
      color: #4D4B4C;

    }

    .tabs .tabs-header {
     margin-top: 0px !important;
   
     padding-bottom: 5px !important;
    
  
       
    }
    .tabs .tabs-header p {
     
      border-top:1px solid var(--primary-color,#75173F);
      border-bottom:1px solid var(--primary-color,#75173F);
      color: black;
      padding-top: 6px !important;
      height: 35px !important;
      font-weight: 100;
      
      
       
    }

    .tabs .tabs-header p:first-child {
     
      border-left:1px solid var(--primary-color,#75173F);
     
      color: black;
   padding-top: 6px !important;
      
      
       
    }
    .tabs .tabs-header p:last-child {
     
      border-right:1px solid var(--primary-color,#75173F);
     
      color: black;
   padding-top: 6px !important;
      
      
       
    }
    .tabs .tabs-header p:first-child { 
 
   border-top-left-radius: 40px;
   border-bottom-left-radius: 40px;  
   padding-top: 6px !important;
       
    }

    .tabs .tabs-header p:last-child { 
      border-top-right-radius: 40px;
 
      border-bottom-right-radius: 40px;  
         padding-top: 6px !important;
          
       }


    .tabs-item  p {
  
        
       padding-top: 0px !important;
  
      }
  
      .headline-line{
        background:  var(--primary-color,#DBAC5B);
opacity: 0.4;
      }
     

    .tabs-item :last-child {
  
    justify-content: flex-end !important;
    align-items: start;

    }

    .total   {
      padding: 30px 30px !important;
      margin: 0px 56px !important;
     
       
    }

    .total  p  {
     
     
    }
    .total-separator{
      display: none !important;
      opacity: 0.2;
    }

    .total .total-amount {
      
      background: var(--primary-color,#75173F) !important;
      color: var(--primary-text-color,white);
      border-left: 10px solid var(--secondary-color,#009CDD);
      height: 32px !important;
      
      display: flex; 
      justify-items: center;
      align-items: center;
    }

    .signature {
      margin-top: 0px !important;
      margin: 0px 56px !important;
      padding: 0px 30px !important;
      padding-top: 20px !important;
      padding-bottom: 60px !important;
      
      padding-left: 60px !important;
     
    }
    
    .sign {
      font-weight: 700;
    }
    .signature * { 
    }
    .remise  {
     
    }
    .total-separator  {
     background:  var(--primary-text-color,black) !important;
    }
    
    .footer {

      
      background: linear-gradient(90deg, var(--secondary-color,#009CDD) 0%,  var(--secondary-color,#009CDD) 65%,var(--primary-color,#75173F) 71%, var(--primary-color,#75173F) 100%) !important;
     padding: 1px !important;
      color: transparent;
      height: 1px !important;
      margin-bottom: 10px !important;
    }


    .footer div {
       
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <%- include('../subtemplates/footer1') %>
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <div class="heading-border-end"></div>
              <%- include('../subtemplates/header5') %>
          
              <div class="h-[1px] mx-[56px] headline-line mt-10 opacity-0" ></div>
              <!-- headline (object, address, client) -->
              <%- include('../subtemplates/headline2') %>
             

              <!-- table -->
              <%- include('../subtemplates/table3') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>
              <% if(invoiceType == 2) { %>
             
                <div class="h-5"></div>
              <% } %>
              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
