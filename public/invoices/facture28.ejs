<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    .page-footer,
    .page-footer-space {
      height: 50px;
    }

    .page-footer {
      position: fixed;
      bottom: 80px;

      width: 100%;
      /* for demo */
      /* for demo */
    }

    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    .heading {
      margin-top: 94px;
      padding-left: 105px !important;
      padding-right: 105px !important;
    }

    .facture-number {
      color: #383838;
      margin-right: 15px;
    }

    .heading .logo {
      border-radius: 0 !important;
      background-color: #634E42;
    }

    .pages .headline {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    .pages .facture-number {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-bottom: 0;
    }

    .headline p {
      font-size: 13.4px;
      font-weight: 400;
    }

    .tabs {
      margin-top: 26px;
      padding-top: 40px;
      padding-bottom: 30px;
      background: #F5F5F5;
    }

    .tabs .separator {
      border: none;
    }

    .tabs-item {
      color: #4D4B4C;
    }

    .tabs .tabs-header {
      color: #242437;
      font-weight: 400;
    }

    .tabs .tabs-header p {
      background: #E8E7E7;
    }

    .tabs .tabs-header p:first-child {
      background: transparent;
      color: #383838;
    }

    .total .total-amount {
      background: #634E42;
      color: white;
    }
    
    .footer {
      bottom: 0;
      background: #634E42;
      color: white;
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <%- include('../subtemplates/footer1') %>
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="page-content flex flex-col w-full">
              <!-- logo + facture -->
              <header class="heading flex justify-center mt-[50px] px-[56px]">
                <div class="logo rounded-full w-[78px] h-[78px] my-[21px]">
                </div>
              </header>
          
              <!-- headline (object, address, client) -->
              <div class="flex justify-between mt-[50px] px-14">
                <div class="headline inter font-bold mt-[27.53px] text-[16.4px] ">
                  <p>Objet:badgesprofessionnelspourlesnouveauxstaffs</p>
                  <p>Client:internationalmedicalcorpsimc</p>
                  <p>Adresse:hmdallaye</p>
                </div>
                <div class="facture-number my-[15px] font-light text-[23px] inter">
                  <div class="leading-tight mb-1">
                    <p>FACTURE</p>
                    <p>NÂ°: 05234</p>
                  </div>
                  <p class="pt-1 border-t-[1px] border-[#4D4B4C] text-[12px]">Date:03/10/2019</p>
                </div>
              </div>

              <!-- table -->
              <%- include('../subtemplates/table1') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>


              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
