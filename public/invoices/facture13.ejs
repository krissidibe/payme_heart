<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    .page-footer,
    .page-footer-space {
      height: 80px;
    }

    .page-footer {
      position: fixed;
      bottom: 80px;

      width: 100%;
      /* for demo */
      /* for demo */
    }

    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    .heading {
      margin-left: 12px;
      margin-right: 12px;
      margin-top: 110px;
    }

    .facture-number p:first-child {
     
      color:  var(--primary-color,#95191B);
    }

    .heading .logo {
      border-radius: 0 !important;
      background: linear-gradient(90deg, #E51B41 0%, #95191B 100%);
    }

    .pages .headline {
      margin-top: 30px;
      line-height: 20px;
    }

    .pages .headline {
      line-height: 20px;
    }

    .headline p {
      font-size: 13.4px;
      font-weight: 400;
    }

    .tabs {
      margin-top: 10px;
    }

    
    .tabs .separator {
      border: none;
    }

    .tabs-item {
      color: #4D4B4C;
    }

    .tabs-item > div {
      
      border: none;
    }

    .pages .tabs-item {
      padding-left: 65px;
      padding-right: 65px;
    }

    .tabs .tabs-header {
      
      font-weight: 400;
      gap: 0;
      padding: 0;
      margin: 14px 56px;
      width: 698.6px;
      height: 39px;
      background: linear-gradient(90deg, var(--primary-color,#E51B41) 0%, var(--secondary-color,#95191B) 99.99%);
      color:  var(--primary-text-color,white);
    }

    .empty-item {
      margin-right: 56px;
      margin-left: 56px;
      margin-top: 10px;
      border-bottom: 0.5px solid #4d4b4c41;
    }

    .total .total-amount { 
      
      background: linear-gradient(90deg, var(--primary-color,#E51B41) 0%, var(--secondary-color,#95191B) 99.99%);
      color:  var(--primary-text-color,white);
    }
    
    .footer {
      bottom: 0;
      color: #383838;
 
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <%- include('../subtemplates/footer1') %>
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <%- include('../subtemplates/header2') %>
          
              <!-- headline (object, address, client) -->
              <%- include('../subtemplates/headline1') %>

              <!-- table -->
              <%- include('../subtemplates/table1') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>


              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
