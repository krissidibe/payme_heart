<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    
    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
      margin-bottom: 30px;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    @font-face {
      font-family: 'Helvetica Neue';
      src: url('path-to-your-fonts/HelveticaNeue-Bold.woff2') format('woff2'),
          url('path-to-your-fonts/HelveticaNeue-Bold.woff') format('woff');
      font-weight: bold;
      font-style: normal;
    }

    .heading {
      margin-top: 55.6px;
      flex-direction: column;
      justify-content: space-between;
  
     
    }
    .heading img {
     
     
      
    }

    .heading > div   {
   
      
      align-items: center !important;
    position: relative;
    padding-bottom: 10px !important; 
    }
   

    .heading > div:first-child:after   {
      content: "";
      position: absolute;
      bottom: 0;
      
    
      background: #383838;
       height: 0.2px !important;
       width: 300px !important;


       margin-left: auto;
margin-right: auto;
left: 0;
right: 0;
text-align: center;
    
      
    }
    .heading > div > p  {
   
      
      color: #383838;
       flex: 1;
        
      height: 100% !important;
     border-right: 6px solid black;
    
    
      
    }
    .pages .facture-number {
     
   
      
    }
    .pages .facture-number > div p    {
      
     
      
    }

    .pages .facture-number > div {
      
     
      
     
    }

    .facture-number > div p:first-child {
      color: #010101;
    }
    .facture-number .dividor {
      display: block !important;
     flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }


    .heading .logo {
      font-family: 'Helvetica Neue', sans-serif;
      background:  var(--primary-color,#383838);
      color: var(--primary-text-color,white);
    }

     

  
    
     

    

    .total   {
      padding: 30px 50px !important;
      margin: 0px 56px !important;
     
     background: #EBEBEB;
    }
    .total-separator{
      display: block !important;
      opacity: 0.2;
    }

    .total .total-amount {
      background:  var(--primary-color,#4D4C4C);
      color: var(--primary-text-color,white);
    }

    .signature {
      margin-top: 0px !important;
      margin: 0px 56px !important;
      padding: 0px 30px !important;
      padding-top: 20px !important;
      padding-bottom: 60px !important;
      background:  #EBEBEB;
      padding-left: 60px !important;
     
    }
    
    .sign {
      font-weight: 700;
    }
    
    .footer {
      bottom: 0;
      
      z-index: 1;
     
      padding-top: 0 !important;
      background:  var(--primary-color,#383838);
      color: var(--primary-text-color,white);
    }

    .footer div {
       
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <header class="heading flex justify-center items-center mt-[58px] px-[56px]">
           
                  <img class=" max-h-[120px] object-center object-contain h-[120px] max-w-[400px] w-[400px]  " src="<%=logo%>" alt="" srcset="">
                    
              </header> 
              
              
              
              
              
          
              <!-- headline (object, address, client) -->
              <div class="headline inter leading-5 font-light   text-[16.4px] px-14">
 
                <div class="flex flex-col items-center">
              
                  <p>Objet: <%= project.name %></p>
                  <p>Client: <%=  customer.name %></p>
                  <p>Adresse: <%=  customer.address %>  </p>
                </div>
              
               
              </div>
              
              
              
              
               
              <div class="facture-number-new   px-6    mr-[56px] items-end mt-4 border-r-[7px] mb-8 border-black   flex flex-col     leading-tight text-[15px] inter">
                <div class="flex leading-6">
                  <% if(invoiceType == 0) { %>
                    <p>PROFORMA</p>
                  <% } %>
                  <% if(invoiceType == 1) { %>
                    <p>FACTURE</p>
                  <% } %>
                  <% if(invoiceType == 2) { %>
                    <p >BORDEREAU</p>
                  <% } %> 
                 
                  <p> <span class="ml-1">NÂ°</span> :  <span><%=project.invoiceNumber.toString().padStart(5, '0')%></span></p>
                </div>
                <div class="flex items-center">
                  <p>DATE :  <span><%=date%></span></p>
                  
                  
                </div>
              </div>

              <!-- table -->
              <%- include('../subtemplates/table4') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>

              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
