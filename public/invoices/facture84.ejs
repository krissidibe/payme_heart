<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 30px;
    }

    .page-footer,
    .page-footer-space {
      height: 50px;
    }

    .page-footer {
      position: fixed;
      bottom: 50px;

      width: 100%;
      /* for demo */
      /* for demo */
    }    
    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
      margin-bottom: 30px;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    @font-face {
      font-family: 'Helvetica Neue';
      src: url('path-to-your-fonts/HelveticaNeue-Bold.woff2') format('woff2'),
          url('path-to-your-fonts/HelveticaNeue-Bold.woff') format('woff');
      font-weight: bold;
      font-style: normal;
    }

    .heading {
      margin-top: 55.6px;
      flex-direction: column;
      justify-content: space-between;
  
     
    }
    .heading img {
     margin-top: 0px !important;
     margin-bottom: 10px !important;
      color: #383838;
      object-position: center;
      
      padding-right: 10px !important;
      
      
    }

    .heading > div   {
   flex-direction: column;
     
      align-items: center !important;
    position: relative;
    padding-bottom: 10px !important; 
    }
   

    .heading > div:first-child:after   {
      content: "";
      position: absolute;
      bottom: 0;
      
    padding-top: 10px;
    padding-bottom: 10px;
    height: 140px !important;
      border-bottom:1px solid var(--primary-color,#C03432);
       height: 0.2px !important;
       width: 100px !important;


       margin-left: auto;
margin-right: auto;
left: 0;
right: 0;
text-align: center;
    
      
    }
    .heading > div > p  {
   
      
      color: #383838;
      text-align: center;
       flex: 1;
       
       padding-left: 120px !important ;
       padding-right:120px !important  ;
        
      height: 100% !important; 
    padding-bottom: 10px !important;
    
      
    }
    .pages .facture-number {
      width: auto !important;
       
      justify-self: flex-start;
      padding-right: 0 !important;
      border-left: 3px solid var(--primary-color,#C03432);
      height: 100%;
      min-width: 220px;
      padding-top: 5px !important;
      padding-bottom: 5px !important;
      padding-left: 20px !important;
      margin-right: 0px !important;
      margin-left: 20px !important;
   
      
    }
    .pages .facture-number > div p    {
      
     
    
    }

    .pages .facture-number > div {
      
     
      
     
    }

    .facture-number > div p:first-child {
      color: #010101;
    }
    .facture-number .dividor {
      display: block !important;
     flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      flex: 1;
      border-top: 1px solid var(--primary-text-color,white) !important;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }


    .heading .logo {
      font-family: 'Helvetica Neue', sans-serif;
      background:  var(--primary-color,#383838);
      color: var(--primary-text-color,white);
    }

    .headline {
      margin-top: 40.5px !important;
      margin-bottom: 20.5px !important;
      padding-top: 0px;
      justify-content: space-between;
     margin-left: 0px !important;
      display: flex;
     padding-left: 0px !important;
    }
   

    .headline p { 
      font-weight: 400;
    }
    .headline > div { 
    padding-left: 25px;
    padding-top: 10px !important;
    padding-bottom: 10px !important;
    border-left: 46px solid var(--primary-color,#C03432);
    }

    .tabs {
      margin-top: 0px !important;
      margin-bottom: 0px !important;
     
    }

    .tabs-item {
      color: #4D4B4C;

    }

    .tabs .tabs-header {
     margin-top: 0px !important;
   
     padding-bottom: 5px !important;
    
      
       
    }
    .tabs .tabs-header p {
     
      border-top:1px solid var(--primary-color,#C03432);
      border-bottom:1px solid var(--primary-color,#C03432);
      color: black;
      padding-top: 6px !important;
      height: 35px !important;
      font-weight: 100;
      
      
       
    }

    .tabs .tabs-header p:first-child {
     
     
      border-left:1px solid var(--primary-color,#C03432);
     
      color: black;
   padding-top: 6px !important;
      
      
       
    }
    .tabs .tabs-header p:last-child {
     
      border-right:1px solid var(--primary-color,#C03432);
     
      color: black;
   padding-top: 6px !important;
      
      
       
    }

    .tabs-item  p {
  
        
       padding-top: 0px !important;
  
      }
  
     

    .tabs-item :last-child {
  
    justify-content: flex-end !important;
    align-items: start;

    }

    .total   {
      padding: 30px 30px !important;
      margin: 0px 56px !important;
     
     
    }
    .total-separator{
      display: none !important;
      opacity: 0.2;
      margin-left: 56px  !important;
      margin-right: 56px  !important;
    }

    .total .total-amount {
      background:  var(--primary-color,#C03432);
      color: var(--primary-text-color,white);
      height: 32px !important;
      
      display: flex; 
      justify-items: center;
      align-items: center;
    }

    .signature {
      margin-top: 0px !important;
      margin: 0px 56px !important;
      padding: 0px 30px !important;
      padding-top: 20px !important;
      padding-bottom: 60px !important;
     
      padding-left: 60px !important;
     
    }
    
    .sign {
      font-weight: 700;
    }
    
    .footer {
      background: var(--primary-color,#C03432);
      color: transparent;
      height: 10px !important;
      margin-bottom: 20px !important;
    }

    .footer div {
       
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <div class="bottom-0 items-center justify-center py-2 pt-2 footer page-footer inter">
  
 
    </div>
    
    
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content">
              <!-- logo + facture -->
              <%- include('../subtemplates/header5') %>
          
              <!-- headline (object, address, client) -->
              <%- include('../subtemplates/headline2') %>
             

              <!-- table -->
              <%- include('../subtemplates/table3') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total1') %>

              <% if(invoiceType == 2) { %>
             
                <div class="h-5"></div>
              <% } %>
              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
