    }
    
    body {
      margin: 0;
    }
  }
  /* Facture Custom styling */

  /* End Facture Custom styling */
</style>

    <!-- Templates styling -->
  <style>
    .header {
    padding: 0px 55px;
  }
  .date {
    margin-top: 8px;
    padding-top: 8px;
    border-top: 1px solid #000100;
  }
    .headline-wrapper {
    width: auto;
    margin: 0 55px;
    padding-top: 10px;
    padding-bottom: 10px;
  }

  .facture-content .headline-wrapper .facture-number {
    display: none;
  }
    .sub-headline-wrapper {
    width: auto;
    margin: 0 55px;
  }
  .sub-headline {
    flex: 1;
  }
  .sub-headline > div {
    flex: 1;
  }

  .sub-headline > div {
    gap: 16px;
    justify-content: space-between;
  }

  .hidden-subheadline {
    display: none;
  }

  .hidden-subheadline div {
    display: none;
  }

  .sub-headline p {
    max-width: 150px;
  }
  .facture-content .sub-headline-wrapper .facture-number {
    display: none;
  }
    .tabs-header {
    gap: 5px;
    width: auto;
    margin-left: 56px;
    margin-right: 56px;
    margin-bottom: 8px;
  }

  .tabs-header p {
    padding-top: 10px; /* /!\ */
    padding-bottom: 10px; /* /!\ */
  }
  
  .facture-content .tabs-header .description {
    padding-left: 10px;
  }

  .tabs-item {
    padding: 0 56px;
  }
  
  .tabs-item p {
    padding-top: 14px; /* /!\ */
    padding-bottom: 14px; /* /!\ */
    padding-left: 5px;
  }

  .tabs-item.empty-item {
    display: none;
  }
  
  /* Show default qty */
  .tabs .quantity {
    display: none;
  }
  
  .tabs .quantity.second {
    display: block;
  }
  
  /* Hide indexs */
  .tab-indexs {
    display: block;
  }

  .tabs .amount {
    padding-left: 0 !important;
  }
    .total {
    color: #4D4B4C;
    margin-top: 23.63px;
    padding-left: 56px;
    padding-right: 56px;
    align-items: flex-start;
    gap: 10px;
  }

  .left {
    max-width: 300px;
  }

  .right, .right > div {
    min-width: 260px;
    gap: 10px;
  }

  .right p {
    padding-left: 6px;
    padding-right: 14px;
  }
  
  .right p span {
    z-index: 2;
  }

  .right .remise {
    padding: 6px 12px 8px 6px;
    border: 1px solid #4D4B4C;
  }

  .right .total-amount {
    background: pink;
    padding: 10px 12px 10px 9px;
  }

  .total-separator {
    height: 1px;
    background: black;
    left: 0;
    right: 0;
  }
    .sign {
    margin-top: 8px;
    padding-top: 40px;
    padding-left: 110px;
    padding-right: 110px;
  }

  .sign > div p {
    width: 130px;
    padding-top: 0;
    padding-bottom: 8px;
    border-bottom: 1px solid #4E4D4D;
  }

  .sign > div:last-child {
     /* margin-top: -8px*/
     margin-top: 0;
  }
  /* <!-- addons styling --> */
    .header .heading-info {
    padding: 0;
    flex: 1;
  }
    .sub-headline-wrapper {
    width: auto;
    margin: 0 55px;;
  }
  .facture-content .sub-headline {
    gap: 16px;
    flex: 0;
    flex-direction: column;
  }

  .sub-headline p {
    width: 160px;
  }
  .facture-content .sub-headline-wrapper .facture-number {
    display: block;
  }

  /* make subheadline in col */
  
  .sub-headline .hidden-subheadline {
    display: flex;
    justify-content: flex-end;
  }

  .sub-headline div:first-child > .headline-client,
  .sub-headline div:first-child > .headline-address {
    display: none;
  }

  .sub-headline .hidden-subheadline > .headline-client,
  .sub-headline .hidden-subheadline > .headline-address {
    display: block;
  }

  .sub-headline-wrapper .facture-number {
    display: flex;
    justify-content: flex-end;
  }
    .tabs-item p {
    border-bottom: 1px solid #A6A5A3 /*rgba(29, 29, 29, 0.2)*/;
  }
    .tabs {
    padding-top: 0;
    padding-bottom: 0;
  }

  .tabs-header {
    border-top: 1px solid #4D4B4C;
    border-bottom: 1px solid #4D4B4C;
    gap: 0;
  }

  .tabs-header .description {
    padding-left: 22px !important;
  }

  .tabs-item .description {
    padding-left: 22px;
  }
  
  .tabs-item .amount {
    padding-right: 22px;
  }
    .total {
    position: relative;
    padding-bottom: 70px;
  }
  
  .right .total-amount {
    background: rgb(199, 163, 163);
    position: absolute;
    bottom: 0;
    left: 56px;
    right: 56px;
    width: auto;
  }
  </style>
<!-- end addons styling -->
<style>
  /* custom styling */

  .header {
    height: unset;
    flex-direction: row-reverse;
    padding: 16px 56px;
  }


  .logo img {
    object-position: right;
  }
  
  .header .heading-info {
    max-height: unset;
    text-align: start;
  }

  .sub-headline-wrapper {
    padding: 24px 56px;
    margin: 0;
    flex-direction: row-reverse;
    justify-content: flex-end !important;
    background: #EDEDED;
  }

  .sub-headline-wrapper .facture-number {
    display: flex !important;
    flex-direction: column;
    justify-content: flex-end;
    padding-right: 78px;
    padding-bottom: 14px;
    color: var(--secondary-color, #A3195B);
    border-right: 1px solid #4D4B4C;
  }

  .sub-headline-wrapper .facture-number > div p:first-child  {
    display: none;
  }

  .sub-headline-wrapper .facture-number > div p {
    font-size: 34px;
    font-weight: 500;
  }

  .sub-headline-wrapper .facture-number .date {
    text-align: center;
    font-size: 16px;
    border: none;
    text-align: start;
    color: #000000;
    margin: 0 !important;
  }

  .sub-headline-wrapper .sub-headline {
    padding-left: 56px;
  }

  .tabs {
    position: relative;
  }

  .tabs-header {
    gap: 0;
    color: var(--primary-text-color, white);
    background: #A3195B;
    border: none;
  }

  .tab-dummy {
    top: 0;
    left: 56px;
    width: 160px;
    height: 42px;
    background: var(--secondary-color, #C9C41A);
  }

  .tabs-header .description {
    z-index: 2;
    color: var(--primary-text-color, #000);
  }

  .left {
    color: #000;
  }

  .right .total-amount {
    color: var(--primary-text-color, white);
    background: var(--primary-color, #A3195B) !important;
    bottom: 16px;
  }

  .right .total-amount span:last-child {
    color: #000;
  }

  .empty-total-amount {
    display: block !important;
    background-color: var(--secondary-color, #C9C41A);
    top: 0;
    bottom: 0;
    right: 0;
    width: 250px;
  }

  .page-footer {
    height: 60px;
    bottom: 0px;
    left: 0;
    right: 0;
    width: auto;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* custom end styling */
</style>

