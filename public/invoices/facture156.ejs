    flex-direction: column;
  }

  .sub-headline p {
    width: 160px;
  }
  .facture-content .sub-headline-wrapper .facture-number {
    display: block;
  }

  /* make subheadline in col */
  
  .sub-headline .hidden-subheadline {
    display: flex;
    justify-content: flex-end;
  }

