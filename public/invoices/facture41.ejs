<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    .page-footer,
    .page-footer-space {
      height: 80px; 
    
    } 

    .page-footer {
      position: fixed;
      bottom: 80px;
     

      width: 100%;
    }

    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    .heading {
      margin-top: 0px !important;
      padding-top: 0px !important;
      
      background-color: #010101;
    }

    .heading > div {
      
      border-left:2px solid red ;
      border-right:2px solid red ;
    }
    .headline {
      
      border-left:2px solid red ;
      border-right:2px solid red ;
      margin: 0px 56px !important;
    }
    .facture-number div p:nth-child(2) {
     
      color: var(--primary-color,#C6589C);
    }

    .heading .logo {
      border-radius: 0 !important;
      background-color: #C6589C;
    }

    .pages .headline {
      margin-top: 50px !important;
      line-height: 20px;
    }

    .facture-number {
      border-color: #010101;
    }

    .facture-number .dividor {
      display: block !important;
      width: 40px;
      border-top: 1px solid #010101;
      margin-left: 11px;
      margin-right: 3px;
    }
    .facture-number .dividor2 {
    
      display: block !important;
      width: 63px;
      border-top: 1px solid #010101;
      margin-left: 11px;
      margin-right: 3px;
      
     
    }

    .headline p {
      font-size: 13.4px;
      font-weight: 400;
    }

    .tabs {
      margin-top: 10px;
    }
    

    .tabs-item {
      color: #4D4B4C;
    }

    .tabs-header > p:first-child {
       
      border-left:2px solid red ;
       border-right:2px solid red ;
       margin: 0px;
    }
    .tabs-item > div {
      color: #4D4B4C;
      border-left:2px solid red ;
       border-right:2px solid red ;
    }

    .tabs .tabs-header {
      color: #242437;
      font-weight: 400;
      gap: 0px;

     
    }

    .tabs .tabs-header p {
     
      background:  var(--primary-color,#D19B52);
      color: var(--primary-text-color,black);
      
    }

    .tabs .tabs-header p:first-child {
     
      color: black;
      background-color: white;
    }

    .total .total-amount {
     
    }
    
    
    .footer {
      background:  var(--primary-color,#D19B52);
      color: var(--primary-text-color,black);
      margin-bottom: 0px;
      bottom: 0;
    }
    
    /* End Facture Custom styling */
  </style>

  <body>
    <!-- footer -->
    <%- include('../subtemplates/footer1') %>
   
    <table>
      <tbody>
        <tr>
          <td class="pages w-[827px]">

            <div class="flex flex-col w-full page-content ">
              <!-- logo + facture -->
              <%- include('../subtemplates/header4') %>
          
              <!-- headline (object, address, client) -->
              <%- include('../subtemplates/headline1') %>

              <!-- table -->
              <%- include('../subtemplates/table1') %>
                
              <!-- facture totals informations -->
              <%- include('../subtemplates/total2') %>

              <!-- signature -->
              <%- include('../subtemplates/sign1') %>

              <!-- footer -->
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
