<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
<script>
  
</script>
  <style>
    :root
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Inter:wght@400;600&display=swap');

    body {
      font-family: 'Poppins', sans-serif;;
    }
    .inter {
      font-family: 'Inter', sans-serif;
    }
    .poppin {
      font-family: 'Poppins', sans-serif;;
    }
    .page-header,
    .page-header-space {
      height: 100px;
    }

    .page-footer,
    .page-footer-space {
      height: 80px;
    }

    .page-footer {
      position: fixed;
      bottom: 80px;

      width: 100%;
      /* for demo */
      /* for demo */
    }

    .page-header {
      position: fixed;
      top: 0mm;
      width: 100%;
      border-bottom: 1px solid black; /* for demo */
      background: yellow; /* for demo */
    }

    .page {
      page-break-after: always;
      padding-bottom: 0px;
    }

    @page {
      margin: 0mm;
    }

    @media print {
      thead {
        display: table-header-group;
      }
      tfoot {
        display: table-footer-group;
      }

      button {
        display: none;
      }

      body {
        margin: 0;
      }
    }
    /* Facture Custom styling */
    .logo {
      background-color: #4D4B93;
    }

    .tabs-item {
      color: #4D4B4C;
      border: none !important;
    }

    .tabs .tabs-header {
      color: var(--primary-color,#4D4B93);
    }
    .tabs > .tabs-item:nth-child(even) {
      
      background: color-mix(in srgb, var(--primary-color,#8e8e8e) 10%, transparent);
    
      margin: 0px 56px !important;
      padding: 0px 10px !important;
      border: none !important;

    }

    .tabs > .tabs-item:nth-child(odd) {
      
      
    
      margin: 0px 56px !important;
      padding: 0px 10px !important;
      border: none !important;
      

    }

    .tabs-item > div{
      border: none !important;
    }

    .signature{
      padding-top: 15px !important;
    }

    .tabs > .tabs-item:nth-child(1) {
     
      
     width: auto !important;
       
      padding: 0px 0px !important;

 background:  var(--primary-color,#4D4B93);
      color: var(--primary-text-color,white);
    }
    
    .total .total-amount {
      background:  var(--primary-color,#4D4B93);
      color: var(--primary-text-color,white);
    }
    .bg-primary{
      background:  var(--primary-color,#4D4B93);
      color: var(--primary-text-color,white);
    }

    .footer {
      
      bottom: 0;
    }

    .primaryText {
      color: var(--primary-color,#4D4B93);
      
    }
    .facture-number p {
      color: var(--primary-color,#4D4B93);
      
    }

    .facture-border {
      border-color: var(--primary-color,#4D4B93) !important;
      
    }

  

    /* End Facture Custom styling */
  </style>
 
  <body>
    <!-- footer -->

   <div class="bottom-0 items-center justify-center py-2 pt-0 footer page-footer inter">
  
    <div class="h-1 border-b w-[79%] border-black/100 mx-auto"></div>
  <p class="text-[11px] px-[57px]  pt-2 text-center line-clamp-4">
  
    <%= dataEnterpriseInfo %> 
  </p>
</div>


    <table>
      <tbody>
         

        <tr>
          <td class="pages w-[827px]">
             
           


            <div class="flex flex-col w-full page-content">
             
              <!-- logo + facture -->
              <header class="heading flex justify-between mt-[58.95px] px-14">
 
                <div class="max-h-[120px] flex object-left object-contain h-[120px] max-w-[400px] w-[400px]  ">
                  <img class=" max-h-[120px] object-left object-contain h-[120px] max-w-[400px] w-[400px] " src="<%=logo%>" alt="" srcset="">
                  
                                </div>
                             
                               
              </header>
              
              
              
               
              
               
          
              <!-- headline (object, address, client) -->
            <div class="w-[93%] bg-black/10 flex  h-[128px]">
              <div class="headline flex-1 inter leading-5 py-6 bg-primary ml-[60px] rounded-tl-full rounded-bl-full flex flex-col  justify-center  font-light   text-[16.4px] px-14">
                <p>Objet: <%= project.name %></p>
                <p>Client: <%=  customer.name %></p>
                <p>Adresse: <%=  customer.address %></p>
              </div>
              
              
              <div class="w-[150px] min-w-max px-4 flex justify-center items-center">
                <div class="facture-number  font-light text-[20px]   flex flex-col  ">
                  <div class="leading-[20px] ">
                    <% if(invoiceType == 0) { %>
                      <p>   PROFORMA</p>
                    <% } %>
                    <% if(invoiceType == 1) { %>
                      <p   >FACTURE</p>
                    <% } %>
                    <% if(invoiceType == 2) { %>
                      <p    >BORDEREAU</p>
                    <% } %> 
                    <p >N°: <span><%=project.invoiceNumber.toString().padStart(5, '0')%></span> </p>
                  </div>

                  
                  <% if(invoiceType == 0) { %>
                  
                    <p class="pt-2 mt-2  border-t-[1px] font-light facture-border   text-[14px]  flex justify-between">Date: <%=date%></p>
                  <% } %> 
                  <% if(invoiceType == 1) { %>
                  
                    <p class="pt-2 mt-2  border-t-[1px] font-light facture-border  text-[14px] flex justify-between">Date: <%=date%></p>
                  <% } %> 
                  <% if(invoiceType == 2) { %>
                  
                    <p class="pt-2 mt-2  border-t-[1px] font-light facture-border  text-[14px]  flex justify-between">Date: <%=date%></p>
                  <% } %> 

                </div>
              </div>
              
               
            </div>

    <div class="flex flex-col px-3 pr-0 ">
                <!-- table -->
                <main class="tabs flex flex-col mt-[31.43px] font-light">
 
                  <!-- table heading -->
                  <div class="tabs-header      tabs-item inter flex w-full  text-[14.8px] gap-[5px] px-14 py-[14px]">
                    <% if(invoiceType !== 2) { %>
                    <p class="flex-1 py-[8.34px]  w-[275px]   px-[15.29px]">DESCRIPTION</p>
                
                      
                      
                      <p class="w-[123px] pl-2 py-[8.34px] text-center">QTé.</p>
                      <p class="w-[130px] pr-3 py-[8.34px] text-center"> <%=   invoiceType === 2 ? "Observation": " Prix.U" %></p>
                  
                      <p class="w-[115px] py-[8.34px] text-center"><%=   invoiceType === 2 ? "": "Montant" %> </p>
                      
                    <% } %> 
                    <% if(invoiceType === 2) { %>
                      <p class="min-w-[296px] w-[296px] flex-1 py-[8.34px]   px-[15.29px]">DESCRIPTION</p>
                      <p class="w-[115px] py-[8.34px]  text-center">QTé.</p>
                      <p class="flex-1 py-[8.34px] mr-0 max-w-auto    text-center"> <%=   invoiceType === 2 ? "Observation": " Prix.U" %></p>
                  
                 
                    <% } %> 
                
                    
                  </div>
                
                  <div class="h-3"></div>
                  <div class="h-3"></div>
                  <% table.forEach(function(item,index) { %>
                    
                    <div class="px-14 tabs-item ">
                      <!-- table item -->
                      <div class="border-b-[0.1px]  border-[#1D1D1D]/20 text-[12px] flex w-full items-center gap-[5px] min-h-[50px] px-2  py-[14px]">
                        <p class="flex-1"> <%=item.designation%> </p>
                    
                        <p class="w-[115px] py-[8.34px] text-center"> <%=item.quantity%> </p>
                    
                        <p class="w-[115px] py-[8.34px] text-center"> 
                          <% if(item.rate != 0 && item.rate != null) { %>
                            <%= invoiceType === 2 ? "": item.rate %>
                          
                          
                            <span class="ml-1"> <%=   invoiceType === 2 ? "": currency %></span> 
                            
                          <% } %> 
                    
                         
                      
                    
                        </p>
                        <p class="w-[115px] py-[8.34px] text-center">  
                          <% if(item.amount != 0 && item.amount != null) { %>
                          <%=   invoiceType === 2 ? "": item.amount %>
                        
                                        
                           
                            
                            <span class="ml-1"> <%=   invoiceType === 2 ? "": currency %></span>
                            
                            <% } %> 
                          </p>
                        
                        </div>
                        
                        
                        
                      </div>
                      <% }) %>
                
                
                 
                  <div class="flex align-bottom empty-item">
                    <div class="w-full"></div>
                  </div>
                </main>
                
                <div class="h-1 border-b border-black/100 my-2 mx-[56px]"></div>
                  
                <!-- facture totals informations -->
                <%- include('../subtemplates/total1') %>
   
                <!-- signature -->
                <%- include('../subtemplates/sign1',signed,signature) %>
  
                <!-- footer -->
    </div>
            </div>
          </td>
        </tr>
      </tbody>

      <tfoot>
        <tr>
          <td>
            <!--place holder for the fixed-position footer-->
            <div class="page-footer-space"></div>
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>









